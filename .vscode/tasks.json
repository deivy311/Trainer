        {
            "label": "cpplint",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "find ${workspaceFolder} -name 'External' -prune -o \\( -name '*.cpp' -o -name '*.h' -o -name '*.hpp' \\) -print | xargs cpplint --filter=-whitespace/comments --linelength=120"
            ],
            "group": "none",
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": {
                    "regexp": "^(.+):(\\d+):\\s*(\\d+)?\\s*(\\[.+\\])?\\s*(.+)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "message": 5
                }
            },
            "detail": "Run cpplint to enforce coding standards"
        },
        {
            "label": "buildWithLint",
            "type": "shell",
            "dependsOn": [
                "cpplint",
                "CMake: linuxBuild"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "buildWithLintRelease",
